<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/nobgbtn"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/orderlistDishImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:requestLegacyExternalStorage="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                >

            <TextView
                android:id="@+id/orderlistDishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_cream_soda"
                android:gravity="center"
                android:text="MoMo"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/orderlistDishPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_cream_soda"
                android:gravity="center"
                android:text="MoMo"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_margin="5dp"
                />
            </LinearLayout>

            <ImageButton
                android:id="@+id/addquantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/addquantity"
                android:background="#FFF"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                />
            <EditText
                android:id="@+id/quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#32746D"
                android:textSize="20dp"

                />
            <ImageButton
                android:id="@+id/subquantity"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/subquantity"
                android:background="#FFF"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                />

            <ImageButton
                android:id="@+id/remove"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/remove"
                android:background="#FFF"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>